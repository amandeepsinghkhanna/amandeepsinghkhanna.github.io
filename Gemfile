# Gemfile
source "https://rubygems.org"

# This is the GitHub Pages gem that includes all the necessary dependencies
# for building a Jekyll site on GitHub Pages. It will manage the versions
# of Jekyll, Jekyll-feed, and other plugins automatically.
gem "github-pages", group: :jekyll_plugins

# For Windows users to avoid polling for file changes.
gem 'wdm', '>= 0.1.0' if Gem.win_platform?